{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended"
  ],
  "parser": "vue-eslint-parser",
  "rules": {
    "no-undef": "off",
    "no-unused-vars": "off",
    "func-call-spacing": "off",
    "vue/html-indent": ["error", 4, {
      "attribute": 1,
      "baseIndent": 0,
      "closeBracket": 0,
      "alignAttributesVertically": false,
      "ignores": []
    }],
    "object-curly-spacing": ["error", "always"],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "ObjectExpression": "off"
      }
    ]
  }
}
